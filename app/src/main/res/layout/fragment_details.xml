<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.DetailsFragment">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="30dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline2"
        android:textAlignment="center"
        android:text="@string/placeholder_temp"
        android:id="@+id/details_temp"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/details_temp"
        app:layout_constraintEnd_toStartOf="@id/details_feels_like"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:text="Feels like: "/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/details_temp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:id="@+id/details_feels_like"
        android:text="@string/placeholder_temp"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_feels_like"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
        android:text="@string/placeholder_weather"
        android:id="@+id/details_weather"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_weather"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:text="@string/placeholder_weather"
        android:id="@+id/details_description"/>


</androidx.constraintlayout.widget.ConstraintLayout>